<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:component="clr-namespace:Crusader_Kings_3.Component"
    >


    <Style TargetType="Grid" x:Key="MainContainer">
        <Setter Property="Background" Value="White" />
    </Style>
    
    
    <Style TargetType="TabItem" x:Key="MainTabItem">
        <Setter Property="Padding" Value="16 10" />
    </Style>

    <Style TargetType="StackPanel">
        <Style.Resources>
            <Style TargetType="{x:Type component:InputText}">
                <Setter Property="Margin" Value="0,0,0,10"/> 
            </Style>
            <Style TargetType="{x:Type component:InputSelect}">
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
        </Style.Resources>
    </Style>

    
    
     


</ResourceDictionary>