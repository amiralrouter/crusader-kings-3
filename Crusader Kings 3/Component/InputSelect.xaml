<UserControl x:Class="Crusader_Kings_3.Component.InputSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:component="clr-namespace:Crusader_Kings_3.Component"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800"
             x:Name="InputSelectController"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="LabelNode" Content="{Binding Label, ElementName=InputSelectController}" FontSize="12" HorizontalAlignment="Right"/>

        <!--<TextBox Grid.Column="1" x:Name="TextNode" Text="{Binding Value, ElementName=InputSelectController}" KeyDown="OnKeyDownHandler" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>-->

        <ComboBox Grid.Column="1">
            
        </ComboBox>

    </Grid>
</UserControl>
